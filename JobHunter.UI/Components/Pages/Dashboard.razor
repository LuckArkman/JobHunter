@code {
    private List<Job> jobs = new();
    private List<string> logs = new();
    private bool isBusy = false;

    protected override void OnInitialized()
    {
        try
        {
            Console.WriteLine("Dashboard - OnInitialized iniciado");
            LoadJobs();
            BotService.OnLog += HandleBotLog;
            Console.WriteLine("Dashboard - OnInitialized concluído");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ERRO OnInitialized: {ex}");
            logs.Insert(0, $"❌ Erro na inicialização: {ex.Message}");
        }
    }

    private void HandleBotLog(string msg)
    {
        logs.Insert(0, msg);
        if(logs.Count > 50) logs.RemoveAt(logs.Count - 1);
        InvokeAsync(StateHasChanged);
    }

    private void LoadJobs()
    {
        try
        {
            Console.WriteLine("LoadJobs - iniciado");
            jobs = DashboardService.GetJobs();
            Console.WriteLine($"LoadJobs - {jobs.Count} vagas carregadas");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ERRO LoadJobs: {ex}");
            logs.Insert(0, $"❌ Erro ao carregar vagas: {ex.Message}");
        }
    }

    private async Task SearchJobs()
    {
        Console.WriteLine("=== SearchJobs CHAMADO ===");
        
        if (isBusy)
        {
            Console.WriteLine("SearchJobs - já está ocupado, saindo");
            return;
        }

        try
        {
            isBusy = true;
            logs.Insert(0, "🔍 Iniciando busca de vagas...");
            await InvokeAsync(StateHasChanged);
            
            Console.WriteLine("SearchJobs - chamando DashboardService.RunCollectionAndScoring");
            int count = await DashboardService.RunCollectionAndScoring();
            
            Console.WriteLine($"SearchJobs - {count} vagas retornadas");
            logs.Insert(0, $"✅ Busca finalizada! {count} novas vagas adicionadas ao sistema.");
            LoadJobs();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ERRO SearchJobs: {ex}");
            logs.Insert(0, $"❌ ERRO: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Erro: {ex.Message}");
        }
        finally
        {
            isBusy = false;
            await InvokeAsync(StateHasChanged);
            Console.WriteLine("SearchJobs - finalizado");
        }
    }

    private async Task StartBot()
    {
        Console.WriteLine("=== StartBot CHAMADO ===");
        
        if (isBusy)
        {
            Console.WriteLine("StartBot - já está ocupado, saindo");
            return;
        }

        try
        {
            isBusy = true;
            logs.Insert(0, "🤖 Inicializando JobHunter Bot...");
            await InvokeAsync(StateHasChanged);

            await Task.Run(async () =>
            {
                try
                {
                    logs.Insert(0, "🔐 Autenticando no LinkedIn...");
                    await InvokeAsync(StateHasChanged);
                    
                    Console.WriteLine("StartBot - chamando BotService.Login");
                    BotService.Login();
                    
                    var targets = jobs.OrderByDescending(j => j.Score).Take(10).ToList();
                    logs.Insert(0, $"🎯 {targets.Count} vagas selecionadas");
                    await InvokeAsync(StateHasChanged);
                    
                    Console.WriteLine($"StartBot - processando {targets.Count} vagas");
                    await BotService.RunAutoApply(targets);
                    
                    logs.Insert(0, "✅ Processo concluído com sucesso!");
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"ERRO StartBot (inner): {ex}");
                    logs.Insert(0, $"❌ ERRO CRÍTICO: {ex.Message}");
                }
                finally
                {
                    BotService.Dispose();
                    logs.Insert(0, "🔌 Bot desconectado");
                    isBusy = false;
                    await InvokeAsync(StateHasChanged);
                }
            });
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ERRO StartBot (outer): {ex}");
            logs.Insert(0, $"❌ ERRO: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Erro: {ex.Message}");
            isBusy = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private string GetScoreColor(int score) => score switch
    {
        > 80 => "bg-success text-white",
        > 60 => "bg-info text-white",
        > 40 => "bg-warning text-dark",
        _ => "bg-secondary text-white"
    };

    public void Dispose()
    {
        if (BotService != null)
        {
            BotService.OnLog -= HandleBotLog;
        }
    }

}