@page "/dashboard"
@using JobHunter.Models
@using JobHunter.Services
@using JobHunter.UI.Services
@inject DashboardService DashboardService
@inject LinkedInBotService BotService
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>JobHunter - Dashboard</PageTitle>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css">

<div class="min-vh-100" style="background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);">
    
    <!-- Header Hero -->
    <div class="header-gradient text-white shadow-lg">
        <div class="container-fluid px-4 px-lg-5 py-5">
            <div class="row align-items-center">
                <div class="col-lg-8 mb-4 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div class="robot-icon me-4">
                            <i class="bi bi-robot" style="font-size: 4rem;"></i>
                        </div>
                        <div>
                            <h1 class="display-3 fw-bold mb-2" style="letter-spacing: -1px;">JobHunter</h1>
                            <p class="lead mb-1 opacity-90">Inteligência Artificial para sua Carreira</p>
                            <small class="opacity-75">Automatize candidaturas com precisão e eficiência</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="d-grid gap-3">
                        <button class="btn btn-light btn-lg shadow-sm" @onclick="SearchJobs">
                            @if(isBusy)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            else
                            {
                                <i class="bi bi-search me-2"></i>
                            }
                            <span class="fw-bold">Buscar Vagas</span>
                        </button>

                        <!-- BOTÃO 2: INICIAR BOT -->
                        <button class="btn btn-danger btn-lg shadow-sm pulse-animation" @onclick="StartBot">
                            <i class="bi bi-rocket-takeoff-fill me-2"></i>
                            <span class="fw-bold">Iniciar Bot</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid px-4 px-lg-5 py-5">
        
        <!-- Stats Grid -->
        <div class="row g-4 mb-5">
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="icon-wrapper bg-primary-subtle">
                                <i class="bi bi-briefcase-fill text-primary"></i>
                            </div>
                            <span class="badge rounded-pill bg-primary">Total</span>
                        </div>
                        <h2 class="display-5 fw-bold mb-1 text-primary">@jobs.Count</h2>
                        <p class="text-muted mb-3 small fw-semibold">Vagas Disponíveis</p>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="icon-wrapper bg-success-subtle">
                                <i class="bi bi-star-fill text-success"></i>
                            </div>
                            <span class="badge rounded-pill bg-success">Top Match</span>
                        </div>
                        <h2 class="display-5 fw-bold mb-1 text-success">@jobs.Count(j => j.Score > 80)</h2>
                        <p class="text-muted mb-3 small fw-semibold">Alta Compatibilidade</p>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @(jobs.Count > 0 ? (jobs.Count(j => j.Score > 80) * 100.0 / jobs.Count) : 0)%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="icon-wrapper bg-info-subtle">
                                <i class="bi bi-lightning-charge-fill text-info"></i>
                            </div>
                            <span class="badge rounded-pill bg-info">Fast Track</span>
                        </div>
                        <h2 class="display-5 fw-bold mb-1 text-info">@jobs.Count(j => j.Url.Contains("linkedin"))</h2>
                        <p class="text-muted mb-3 small fw-semibold">Easy Apply</p>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @(jobs.Count > 0 ? (jobs.Count(j => j.Url.Contains("linkedin")) * 100.0 / jobs.Count) : 0)%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="icon-wrapper bg-warning-subtle">
                                <i class="bi bi-graph-up-arrow text-warning"></i>
                            </div>
                            <span class="badge rounded-pill bg-warning text-dark">Medium</span>
                        </div>
                        <h2 class="display-5 fw-bold mb-1 text-warning">@jobs.Count(j => j.Score > 50 && j.Score <= 80)</h2>
                        <p class="text-muted mb-3 small fw-semibold">Média Compatibilidade</p>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: @(jobs.Count > 0 ? (jobs.Count(j => j.Score > 50 && j.Score <= 80) * 100.0 / jobs.Count) : 0)%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Console -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="console-card shadow-lg">
                    <div class="console-header d-flex align-items-center justify-content-between p-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-terminal-fill me-3 fs-5"></i>
                            <h5 class="mb-0 fw-bold">Activity Console</h5>
                            <span class="ms-3 badge bg-success live-badge">
                                <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>Live
                            </span>
                        </div>
                        <button class="btn btn-sm btn-outline-light rounded-pill px-3" @onclick="@(() => logs.Clear())">
                            <i class="bi bi-trash3-fill me-1"></i> Clear
                        </button>
                    </div>
                    <div class="console-body">
                        @if(logs.Count == 0)
                        {
                            <div class="text-muted fst-italic opacity-75">
                                <i class="bi bi-hourglass-split me-2"></i>Awaiting operations...
                            </div>
                        }
                        else
                        {
                            @foreach(var log in logs.Take(15))
                            {
                                <div class="console-line">
                                    <span class="prompt">$</span>
                                    <span class="timestamp">[@DateTime.Now.ToString("HH:mm:ss")]</span>
                                    <span class="message">@log</span>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Jobs Table -->
        <div class="row">
            <div class="col-12">
                <div class="jobs-table-card shadow-lg">
                    <div class="card-header bg-white border-0 p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h3 class="mb-2 fw-bold">
                                    <i class="bi bi-list-ul me-2 text-primary"></i>
                                    Vagas Encontradas
                                </h3>
                                <p class="text-muted mb-0 small">
                                    <i class="bi bi-funnel-fill me-1"></i>
                                    Ordenado por score de compatibilidade (maior para menor)
                                </p>
                            </div>
                            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                                <span class="badge bg-primary-subtle text-primary border border-primary fs-5 px-4 py-2">
                                    @jobs.Count vagas
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if(jobs.Count == 0)
                        {
                            <div class="empty-state text-center py-5">
                                <div class="empty-icon mb-4">
                                    <i class="bi bi-inbox" style="font-size: 5rem; color: #dee2e6;"></i>
                                </div>
                                <h4 class="text-muted mb-3">Nenhuma vaga encontrada</h4>
                                <p class="text-muted mb-4">Clique no botão abaixo para iniciar a busca por vagas</p>
                                <button class="btn btn-primary btn-lg px-5" @onclick="SearchJobs" disabled="@isBusy">
                                    <i class="bi bi-search me-2"></i>
                                    Buscar Vagas Agora
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="px-4 py-3" style="width: 120px;">
                                                <i class="bi bi-award-fill me-2 text-primary"></i>
                                                <span class="fw-bold">Score</span>
                                            </th>
                                            <th class="py-3">
                                                <i class="bi bi-card-heading me-2 text-primary"></i>
                                                <span class="fw-bold">Título da Vaga</span>
                                            </th>
                                            <th class="py-3" style="width: 250px;">
                                                <i class="bi bi-building me-2 text-primary"></i>
                                                <span class="fw-bold">Empresa</span>
                                            </th>
                                            <th class="py-3 text-center" style="width: 150px;">
                                                <i class="bi bi-tag-fill me-2 text-primary"></i>
                                                <span class="fw-bold">Status</span>
                                            </th>
                                            <th class="py-3 text-center" style="width: 140px;">
                                                <i class="bi bi-gear-fill me-2 text-primary"></i>
                                                <span class="fw-bold">Ações</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var job in jobs.OrderByDescending(j => j.Score))
                                        {
                                            <tr class="job-row">
                                                <td class="px-4">
                                                    <span class="badge @GetScoreColor(job.Score) score-badge">
                                                        @job.Score<span class="opacity-75">%</span>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="job-title">@job.Title</div>
                                                </td>
                                                <td>
                                                    <div class="company-name">
                                                        <i class="bi bi-buildings me-2"></i>@job.Company
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    @if(job.Url.Contains("linkedin"))
                                                    {
                                                        <span class="badge bg-info px-3 py-2">
                                                            <i class="bi bi-lightning-fill me-1"></i>
                                                            Easy Apply
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary px-3 py-2">
                                                            <i class="bi bi-box-arrow-up-right me-1"></i>
                                                            Externo
                                                        </span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <a href="@job.Url" target="_blank" class="btn btn-sm btn-outline-primary view-btn">
                                                        <i class="bi bi-eye-fill me-1"></i>
                                                        Ver Vaga
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    /* Header */
    .header-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
    }

    .header-gradient::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }

    .header-gradient > * {
        position: relative;
        z-index: 1;
    }

    .robot-icon {
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
    }

    /* Pulse Animation for Bot Button */
    .pulse-animation {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    @@keyframes pulse {
        0%, 100% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7); }
        50% { box-shadow: 0 0 0 15px rgba(220, 53, 69, 0); }
    }

    /* Stat Cards */
    .stat-card {
        background: white;
        border: none;
        border-radius: 20px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    }

    .stat-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 16px 32px rgba(0, 0, 0, 0.15);
    }

    .icon-wrapper {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
    }

    /* Console */
    .console-card {
        background: #1e1e1e;
        border-radius: 20px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .console-header {
        background: linear-gradient(135deg, #2d2d2d 0%, #1e1e1e 100%);
        color: white;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .live-badge {
        animation: livePulse 2s ease-in-out infinite;
    }

    @@keyframes livePulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.6; }
    }

    .console-body {
        padding: 1.5rem;
        height: 280px;
        overflow-y: auto;
        font-family: 'Courier New', Courier, monospace;
        font-size: 0.9rem;
        line-height: 1.8;
        color: #e0e0e0;
    }

    .console-body::-webkit-scrollbar {
        width: 10px;
    }

    .console-body::-webkit-scrollbar-track {
        background: #2d2d2d;
        border-radius: 10px;
    }

    .console-body::-webkit-scrollbar-thumb {
        background: #555;
        border-radius: 10px;
    }

    .console-body::-webkit-scrollbar-thumb:hover {
        background: #777;
    }

    .console-line {
        margin-bottom: 0.5rem;
        animation: slideIn 0.3s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .prompt {
        color: #4ade80;
        font-weight: bold;
        margin-right: 0.5rem;
    }

    .timestamp {
        color: #60a5fa;
        margin-right: 0.5rem;
    }

    .message {
        color: #e0e0e0;
    }

    /* Jobs Table */
    .jobs-table-card {
        background: white;
        border: none;
        border-radius: 20px;
        overflow: hidden;
    }

    .job-row {
        transition: all 0.2s ease;
        cursor: pointer;
    }

    .job-row:hover {
        background-color: rgba(102, 126, 234, 0.05);
        transform: translateX(8px);
    }

    .score-badge {
        font-size: 1.1rem;
        font-weight: 700;
        padding: 0.5rem 1rem;
        border-radius: 12px;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        display: inline-block;
